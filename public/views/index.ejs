  <main id="main">

    <!-- ======= About Section ======= -->

    <!-- ======= Why Us Section ======= -->

    <!-- ======= Menu Section ======= -->
    <section id="menu" class="menu section-bg">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>Cárdapio</h2>
          <p>Confira as variedades</p>
        </div>


        <div class="row menu-container" data-aos="fade-up" data-aos-delay="200">

          <% pratos.forEach(function(prato){ %>
            <% if(!prato.esp){ %>
              <div class="col-lg-6 menu-item filter-starters">
                <% if(prato.linkimagem != ""){
                  temp = prato.linkimagem;
                }; %>
                <img src="<%=temp %>" class="menu-img" alt="">
                <div class="menu-content">
                  <a><%=prato.nome %></a><span><%if(prato.preco != ""){ %>R$<%=prato.preco %><% } %>
                </div>
                <div class="menu-ingredients">
                  <%=prato.descricao %>
                </div>
              </div>
            <%};%>
          <% }); %>
  

        </div>

      </div>
    </section><!-- End Menu Section -->

    <!-- ======= Specials Section ======= -->
    <section id="specials" class="specials">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>Especias</h2>
          <p>De uma olhada em nossas especialidades</p>
        </div>

        <div class="row" data-aos="fade-up" data-aos-delay="100">
          <div class="col-lg-3">
            <ul class="nav nav-tabs flex-column">
      
            <%let cont = 1;%>
              <% pratos.forEach(function(especial){ %>
                <% if(especial.esp){ %>
                  <% switch(cont){ 
                      case 1: %>
                       <li class="nav-item">
                        <a class="nav-link active show" data-bs-toggle="tab" href="#tab-<%=cont %>"><%=especial.nome %></a>
                       </li>
                  <%   break;
                      default: %>
                    <li class="nav-item">
                      <a class="nav-link" data-bs-toggle="tab" href="#tab-<%=cont %>"><%=especial.nome %></a>
                    </li>
              <% };cont = cont + 1;}; 
                 }); %>

            </ul>
          </div>
          <div class="col-lg-9 mt-4 mt-lg-0">
            <div class="tab-content">
              
            <%cont = 1;%>
              <% pratos.forEach(function(especial){ %>
                <% if(especial.esp){ %>
                  <% if(especial.linkimagem != ""){
                    temp = especial.linkimagem;
                  }; %>
                  <% switch(cont){ 
                      case 1: %>
                      <div class="tab-pane active show" id="tab-<%=cont %>">
                        <div class="row">
                          <div class="col-lg-8 details order-2 order-lg-1">
                            <br>
                            <h3><%=especial.nome %></h3>
                            <a><%if(especial.preco != ""){ %>R$<%=especial.preco %><% } %></a>
                            <p class="fst-italic"><%=especial.descricao %></p>
                          </div>
                          <div class="col-lg-4 text-center order-1 order-lg-2">
                            <img src="<%=temp %>" alt="" class="img-fluid"> 
                          </div>
                        </div>
                      </div>
                  <%   break;
                      default: %>
                      <div class="tab-pane" id="tab-<%=cont %>">
                        <div class="row">
                          <div class="col-lg-8 details order-2 order-lg-1">
                            <br>
                            <h3><%=especial.nome %></h3>
                            <a><%if(especial.preco != ""){ %>R$<%=especial.preco %><% } %></a>
                            <p class="fst-italic"><%=especial.descricao %></p>
                          </div>
                          <div class="col-lg-4 text-center order-1 order-lg-2">
                            <img src="<%=temp %>" alt="" class="img-fluid">
                          </div>
                        </div>
                      </div>
                  <% };cont = cont + 1;}; 
                   });%>

            </div>
          </div>
        </div>

      </div>
    </section><!-- End Specials Section -->

    <!-- ======= Events Section ======= -->
   
