        <div class="section-title">
          <h2>Contato e Localização</h2>
          <p>Nossa localização</p>
        </div>
      </div>
      <% if(restaurante.mapalink != ""){
        temp = restaurante.mapalink;
      }; %>
      <div class="d-flex justify-content-center align-items-center" data-aos="fade-up">
        <iframe style="border:0; width: 100%; height: 350px;" src="<%=temp %>" frameborder="0" allowfullscreen></iframe>
      </div>
      
      <div class="container" data-aos="fade-up">

        <div class="row mt-5">

          <div class="col-lg-4">
            <div class="info">
            <div class="open-hours">
              <i class="bi bi-clock"></i>
              <h4>Horário de funcionamento: </h4>
              <p>
                <%=restaurante.horario%>
              </p>
            </div>

            <div class="email">
              <i class="bi bi-envelope"></i>
              <h4>Email:</h4>
              <p><%=restaurante.email%></p>
            </div>

            <div class="phone">
              <i class="bi bi-phone"></i>
              <h4>Contato:</h4>
              <p><%=restaurante.telefone%></p>
            </div>

            </div>

          </div>
          
          <!-- ======= contactar email ======= -->

        </div>

      </div>
